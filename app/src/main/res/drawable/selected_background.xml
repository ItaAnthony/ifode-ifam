<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Gradiente Linear -->
    <gradient
        android:angle="270"
        android:endColor="#3C7268"
        android:startColor="#4A8A7C"
        android:type="linear" />

    <!-- Borda -->
    <stroke
        android:width="2dp"
        android:color="#2F5A4E" />

    <!-- Cantos Arredondados -->
    <corners android:radius="30dp" />
</shape>
